{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://causaliq.com/schemas/workflow.json",
  "title": "CausalIQ Workflow Schema",
  "description": "Simplified GitHub Actions-style workflow for causal discovery experiments",
  "type": "object",
  "required": [
    "name",
    "steps"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Workflow name"
    },
    "id": {
      "type": "string",
      "description": "Unique workflow identifier for path construction"
    },
    "data_root": {
      "type": "string",
      "description": "Root directory for input data files"
    },
    "output_root": {
      "type": "string",
      "description": "Root directory for output files"
    },
    "matrix": {
      "type": "object",
      "description": "Matrix variables for parameterized execution",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "array",
          "description": "Array of values for matrix variable",
          "minItems": 1,
          "items": {
            "type": [
              "string",
              "number",
              "boolean"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "steps": {
      "type": "array",
      "description": "List of workflow steps",
      "minItems": 1,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "required": [
              "run"
            ]
          },
          {
            "required": [
              "uses"
            ]
          }
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Step name"
          },
          "run": {
            "type": "string",
            "description": "Shell command to execute"
          },
          "uses": {
            "type": "string",
            "description": "Action to use"
          },
          "with": {
            "type": "object",
            "description": "Input parameters for the action",
            "patternProperties": {
              "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                "type": [
                  "string",
                  "number",
                  "boolean"
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}